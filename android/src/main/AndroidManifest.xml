<manifest xmlns:android="http://schemas.android.com/apk/res/android"
  package="com.example.accurate_step_counter">

  <!-- Required for accessing step counter sensor on Android 10+ (API 29+) -->
  <uses-permission android:name="android.permission.ACTIVITY_RECOGNITION"/>

  <!-- Optional: For better sensor access on some devices -->
  <uses-permission android:name="android.permission.BODY_SENSORS"/>
  
  <!-- Required for background body sensor access on Android 13+ (API 33+) -->
  <uses-permission android:name="android.permission.BODY_SENSORS_BACKGROUND"/>
  
  <!-- Required for high sampling rate sensors in health foreground service -->
  <uses-permission android:name="android.permission.HIGH_SAMPLING_RATE_SENSORS"/>

  <!-- Required for foreground service on Android â‰¤10 -->
  <uses-permission android:name="android.permission.FOREGROUND_SERVICE"/>
  <uses-permission android:name="android.permission.FOREGROUND_SERVICE_HEALTH"/>
  <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>
  <uses-permission android:name="android.permission.WAKE_LOCK"/>

  <application>
    <service
        android:name=".StepCounterForegroundService"
        android:foregroundServiceType="health"
        android:exported="false"/>
  </application>
</manifest>
